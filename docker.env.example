# ===========================================
# Database Configuration
# ===========================================

# Method 1: Complete DSN (Data Source Name) - highest priority
# Use this for full control over connection string
# Format: user:password@tcp(host:port)/database?params
# MYSQL_DSN=app:appl3pass@tcp(localhost:3306)/orderation?parseTime=true&charset=utf8mb4&collation=utf8mb4_unicode_ci

# Method 2: Individual components - used when MYSQL_DSN is not set
# For Docker deployment (connects to db container)
MYSQL_HOST=db
MYSQL_PORT=3306
MYSQL_USER=app
MYSQL_PASSWORD=appl3pass
MYSQL_DATABASE=orderation
MYSQL_PARAMS=parseTime=true&charset=utf8mb4&collation=utf8mb4_unicode_ci

# For local MySQL server, use:
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=your_username
# MYSQL_PASSWORD=your_password
# MYSQL_DATABASE=orderation

# For remote database server, use:
# MYSQL_HOST=your-db-server.com
# MYSQL_PORT=3306
# MYSQL_USER=your_remote_user
# MYSQL_PASSWORD=your_remote_password
# MYSQL_DATABASE=orderation

# MySQL Docker container settings (used by docker-compose db service)
MYSQL_ROOT_PASSWORD=rootpass

SECRET=change-me-in-prod
ADMIN_EMAIL=admin@demo.local
ADMIN_PASSWORD=admin123
ADDR=:8080
